@model TrainingProject.ViewModels.GasStationVM
@using TrainingProject.Models;
@{
    ViewData["Title"] = "Add";
    Layout = "_Layout";
}
<div class="row">
    <div class="col-xs-12 col-md-7">
        <form asp-action="GasStationAdd" asp-controller="GasStationList" method="post" id="add_form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h4 id="tieude"><b>ガソリンスタンドリスト</b></h4><br />
            @if (ViewBag.dupplicateName != null)
            {
                <p id="exist" class="text-danger">@ViewBag.dupplicateName</p>
            }
        <div class="row">
            <label class="col-xs-5">
                ガソリンスタンド名
            </label>
            <div class="col-xs-1"></div>
            <input type="text" class="col-xs-6" asp-for="GasStationName" name="GasStationName" tabindex="1" required autofocus />
            <span asp-validation-for="GasStationName" class="text-danger"></span>
        </div><br />

              <div class="row">
                  <div class="col-xs-5">
                      <label>
                          種類
                      </label>
                  </div>
                  <div class="col-xs-1"></div>
                  <div class="col-xs-6">
                      @foreach (var type in ViewBag.getType)
                      {
                          <div class="col-xs-11">
                              <input id="@type.TypeCode" name="type" style="margin-right:6%" type="checkbox" value="@type.TypeCode" />
                              <label id="textType" for="@type.TypeCode">
                                  @type.TypeText
                              </label>
                          </div>
                      }
                  </div>
              </div>
              <div class="row">
                  <label asp-for="Longitude" class="col-xs-5">Longitude</label>
                  <div class="col-xs-1"></div>
                  <input type="text" name="Longitude" class="col-xs-6" required tabindex="3" />
                  <span asp-validation-for="Longitude" class="text-danger"></span>
              </div><br />
              <div class="row">
                   <label type="text" class="col-xs-5">Latitude</label>
                   <div class="col-xs-1"></div>
                   <input name="Latitude" class="col-xs-6" required tabindex="4" />
                   <span asp-validation-for="Latitude" class="text-danger"></span>
              </div><br />
              <div class="row">
                    <label class="col-xs-5">
                          地区
                    </label>
                    <div class="col-xs-1"></div>
                        <select class="col-xs-6" id="districtCreate" name="searchDistrict" tabindex="5"
                         asp-items="@(new SelectList(@ViewBag.getDistrict,"DistrictId","DistrictName"))" required>
                            <option value=""></option>
                        </select>
              </div><br />
              <div class="row">
                     <label class="col-xs-5">
                             住所
                     </label>
                     <div class="col-xs-1"></div>
                     <input type="text" name="Address" class="col-xs-6" required tabindex="6" />
                     <span asp-validation-for="Address" class="text-danger"></span>
              </div><br />
              <div class="row">
                     <label class="col-xs-5">
                                  開館時間
                     </label>
                     <div class="col-xs-1"></div>
                     <input type="text" name="OpeningTime" class="col-xs-6" tabindex="7" />
                     <span asp-validation-for="OpeningTime" class="text-danger"></span>
              </div><br />
              <div class="row">
                      <div class="col-xs-5">
                        <label>
                            種類
                        </label>
                      </div>
                      <div class="col-xs-1"></div>
                      <div class="col-xs-6">
                      @foreach (var type in ViewBag.getType1)
                          {
                            <div class="col-xs-4">
                                <label class="radio-inline">
                                    <input id="@type.TypeType" name="typetype" type="radio" class="className1" style="margin-top: 15px;" tabindex="8" value="@type.TypeCode" />
                                    <img src="~/images/@Html.Raw(@type.TypeText + ".png")" width="40" alt="@type.TypeText" />
                                </label>
                            </div>
                          }
                      </div>

              </div><br />
              <div id="btn1" >
                    <input  type="submit" value="登録	" style="width:80px"  class="btn btn-primary" tabindex="9" />
                    <input  type="button" style="width:80px" class="btn btn-primary" value="戻る	" onclick="history.back()" tabindex="10" />
            </div>
        </form>
    </div>
</div>
<style>

    body {
    }
    #exist{
        margin-left:40%;
    }
    #tieude {
        text-align: center;
    }
    #btn1{
        float:right;
    }
    #textType {
        font-weight: normal;
    }
    label.error {
        color: red;
    }
</style>